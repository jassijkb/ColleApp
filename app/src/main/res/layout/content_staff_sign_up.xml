<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jaspreetbhui.cetclg.StaffSignUp"
    tools:showIn="@layout/activity_staff_sign_up">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="your Account"
        android:textStyle="italic"
        android:textSize="30dp"
        android:textColor="@color/txt"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_marginTop="80dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            style="@style/edittextStyle"
            android:hint="Name"
            android:maxLength="35"
            android:ems="10"
            android:id="@+id/name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Choose your user name"
            style="@style/edittextStyle"
            android:ems="10"
            android:maxLength="30"
            android:id="@+id/uname" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            style="@style/edittextStyle"
            android:maxLength="35"
            android:id="@+id/email"
            android:hint="Email address" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            style="@style/edittextStyle"
            android:maxLength="25"
            android:id="@+id/pass1"
            android:hint="Create Password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            style="@style/edittextStyle"
            android:ems="10"
            android:maxLength="25"
            android:id="@+id/pass2"
            android:layout_gravity="center_horizontal"
            android:hint="Confirm Password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            style="@style/edittextStyle"
            android:ems="10"
            android:maxLength="8"
            android:id="@+id/stfkey"
            android:hint="Staff Key" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Department"
            style="@style/edittextStyle"
            android:id="@+id/autoCompleteTextView2" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Subject"
            style="@style/edittextStyle"
            android:maxLength="35"
            android:ems="10"
            android:id="@+id/subject" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            style="@style/edittextStyle"
            android:ems="10"
            android:maxLength="10"
            android:id="@+id/mobno"
            android:hint="Contact Number" />

    </LinearLayout>

    <Button
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/button21"
        android:onClick="createAcc"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create  "
        android:textStyle="italic"
        android:textColor="@color/btn"
        android:textSize="30dp"
        android:id="@+id/textView17"
        android:layout_alignTop="@+id/textView20"
        android:layout_toLeftOf="@+id/button21"
        android:layout_toStartOf="@+id/button21" />

</RelativeLayout>
